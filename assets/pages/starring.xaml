<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Starring" Height="400" Width="300" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Name="InputBox" Margin="0,0,20,10" VerticalContentAlignment="Center" />

        <Button Grid.Row="0" Content="Add" HorizontalAlignment="Right" Width="80" Margin="0,0,0,10" x:Name="AddButton" />

        <ListBox Grid.Row="1" Name="ListBox" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Delete" Width="80" Margin="5,0" x:Name="DeleteButton" />
            <Button Content="Save" Width="80" Margin="5,0" x:Name="SaveButton" />
        </StackPanel>
    </Grid>
</Window>