<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Genres" Height="300" Width="400" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Label x:Name="TitleLabel" Content="Genres" FontSize="25" FontWeight="Bold"/>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="5,42,0,0">
            <StackPanel Name="CheckboxPanel" VerticalAlignment="Top"></StackPanel>
        </ScrollViewer>

        <Button x:Name="UpdateButton" Grid.Row="1" Content="Save" HorizontalAlignment="Right" Width="80" Margin="0,10,0,0" />
    </Grid>
</Window>
