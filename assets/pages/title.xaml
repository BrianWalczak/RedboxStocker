<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="View Title" Height="420" Width="640" ResizeMode="NoResize">
  <DockPanel>
    <Grid Margin="20">
      <Label Content="Title:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="175,0,0,0" FontSize="18" FontWeight="600"/>
      <TextBox x:Name="TitleText" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="230,5,0,0" Height="25" Width="272" VerticalContentAlignment="Center" FontWeight="600"/>
      <ComboBox x:Name="MediaTypeSelect" Width="77" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,3,0" FontSize="14" FontWeight="600" VerticalContentAlignment="Center"></ComboBox>

      <Label Content="Sort Name:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="175,32.5,0,0" FontSize="16" FontWeight="600"/>
      <TextBox x:Name="SortNameText" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="270,37.5,0,0" Height="25" Width="272" VerticalContentAlignment="Center" FontWeight="600"/>

      <Label Content="Description" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="175,65.5,0,0" FontSize="16" FontWeight="600"/>
      <TextBox x:Name="DescriptionTextBox" FontSize="14" AcceptsReturn="True" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="180,95.5,0,0" Height="120" Width="400" FontWeight="600"/>

      <Label Content="Product ID:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="175,225,0,0" FontSize="14" FontWeight="600"/>
      <TextBox FontSize="14" x:Name="IDTitleBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="260,228,0,0" Height="25" Width="60" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="600"/>

      <Label Content="Run Time:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,225,70,0" FontSize="16" FontWeight="600"/>
      <TextBox FontSize="16" x:Name="RunTimeBox" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,228,5,0" Height="25" Width="60" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="600"/>

      <Label Content="Studio:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="175,260,0,0" FontSize="16" FontWeight="600"/>
      <TextBox FontSize="14" x:Name="StudioBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="240,263,0,0" Height="25" Width="160" VerticalContentAlignment="Center" FontWeight="600"/>

      <Label Content="Rating:" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,260,70,0" FontSize="16" FontWeight="600"/>
      <ComboBox x:Name="RatingSelect" Width="60" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,263,5,0" FontSize="14" FontWeight="600" VerticalContentAlignment="Center"></ComboBox>

      <Button x:Name="EditImageButton" Content="Edit Image" Width="159" Height="23" Margin="0,0,0,65" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
      
      <Button x:Name="GenreButton" Content="Genres" Width="73" Height="23" Margin="0,0,0,35" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
      <Button x:Name="StarringButton" Content="Starring" Width="80" Height="23" Margin="79,0,0,35" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>

      <Image x:Name="CoverImage" Margin="0,0,0,0" Width="225" Height="225" VerticalAlignment="Top" HorizontalAlignment="Left" />
      <Button x:Name="UpdateButton" Content="Update" Width="98" Height="23" Margin="0,0,110,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
      <Button x:Name="AdvancedButton" Content="Advanced View" Width="98" Height="23" Margin="0,0,5,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>

      <Label x:Name="ChangesLabel" Content="Changes have been made, save them!" FontSize="14" FontWeight="600" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-5,0,0,-10" Visibility="Hidden"/>
    </Grid>
  </DockPanel>
</Window>